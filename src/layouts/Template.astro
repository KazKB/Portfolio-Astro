---
import Head from '../components/Head.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../css/global.css';

const {link1, link2, link3, name1, name2, name3, heading, subHeading, description} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <Head heading={heading} description={description}/>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->

        <Header link1={link1} link2={link2} link3={link3} name1={name1} name2={name2} name3={name3}/>

        <main>
            <div id="center-div">
                <h1 id="heading">{heading}</h1>
                <h3 class="sub-heading">{subHeading}</h3>
                <slot/>
            </div>
        </main>

        <Footer/>

        <script src="../javascript/header-footer.js"></script>
    </body>
</html>