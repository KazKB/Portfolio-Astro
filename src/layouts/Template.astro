---
import '../css/global.css';
import '../css/header.css';
import '../css/main.css';
import '../css/footer.css';
import '../css/return-to-top.css';

const {link1, link2, name1, name2, heading, description, keyword} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{heading}</title>
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Kaleel Boston">
        <meta name="description" content={description}>
        <meta name="keyword" content={keyword}>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
        <!-- <link rel="shortcut icon" href="/icons/logo-icon.png" type="image/x-icon"> -->
    </head>

    <body>
        <header>
            <nav>
                <p id="time"></p>
                <a href={link1}><h3>{name1}</h3></a>
                <a href={link2}><h3>{name2}</h3></a>
                <p id="date"></p>
            </nav>
        </header>

        <main>
            <h1 id="heading">{heading}</h1>
            <slot/>
        </main>

        <footer>
            <address>
                <p>Socials:</p> 
                <li title="Discord ID" id="discord">Discord: kazkb</li>
                <li title="LinkedIn Account" id="linkedin">LinkedIn: <a href="https://www.linkedin.com/in/kaleel-boston-24681426b/" target="_blank">Kaleel Boston</a></li>
                <li title="Email Address" id="email">Email: <a href="mailto: kaleelboston@gmail.com">kaleelboston@gmail.com</a></li>
                <li title="Phone Number" id="phone">Phone: <a href="tel: +44 7308 558870">+44 7308 558870</a></li>
            </address>
            
            <address>
                <p>
                    Current Residence:<br>
                    N22 7SR<br>
                    United Kingdom
                </p>
            </address>
        </footer>

        <script src="../javascript/header-footer.js"></script>
        <script src="../javascript/return-to-top.js"></script>
    </body>
</html>