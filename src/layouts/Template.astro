---
import '../css/global.css';
import '../css/return-to-top.css';

const {link1, link2, link3, name1, name2, name3, heading, subHeading, description, keyword} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>{heading}</title>
        <meta name="generator" content={Astro.generator} />
        <meta name="author" content="Kaleel Boston">
        <meta name="description" content={description}>
        <meta name="keyword" content={keyword}>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="shortcut icon" href="/icons/tavern-sign-icon.svg" type="image/x-icon">
    </head>

    <body>
        <header>
            <nav>
                <p id="time"></p>
                <a href={link1}><h3>{name1}</h3></a>
                <a href={link2}><h3>{name2}</h3></a>
                <a href={link3}><h3>{name3}</h3></a>
                <p id="date"></p>
            </nav>
        </header>

        <main>
            <h1 id="heading">{heading}</h1>
            <h3 class="sub-heading">{subHeading}</h3>
            <slot/>
        </main>

        <footer>
            <address>
                <p>Contact Me At:</p> 
                <li title="Discord ID" id="discord">Discord: KazKB#3454</li>
                <li title="Email Address" id="email">Email: <a href="mailto: kaleelboston@gmail.com">kaleelboston@gmail.com</a></li>
                <li title="Phone Number" id="phone">Phone: <a href="tel: +44 7308 558870">+44 7308 558870</a></li>
            </address>
            
            <address>
                <p>
                    Current Residence:<br>
                    N22 7SR<br>
                    United Kingdom
                </p>
            </address>
        </footer>

        <script src="../javascript/header-footer.js"></script>
        <script src="../javascript/return-to-top.js"></script>
    </body>
</html>